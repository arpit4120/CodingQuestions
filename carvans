#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define FAST ios_base::sync_with_stdio(false);cin.tie(NULL);
int32_t main() {
    ll t;
    FAST;
    cin>>t;
    while(t--)
    {
    	int n;
    	cin>>n;
    	int a[n];
    	int c=n;
    	for(int i=0;i<n;i++)
    	{
    		cin>>a[i];
    		if(i>=1)
    		{
    			if(a[i]>a[i-1])
    			{
    				c--;
    				a[i]=a[i-1];
    			}
    		}
    	}
    	cout<<c<<endl;
    	
    }
    return 0;
}
