//codechef.com
#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define FAST ios_base::sync_with_stdio(false);cin.tie(NULL);
int32_t main() {
    ll t;
    FAST;
    cin>>t;
    while(t--)
    {
    	int n;
    	cin>>n;
    	string s;
    	cin>>s;
    	ll c=0;
    	for(int i=0;i<n;i++)
    	{
    		if(s[i]=='1')
    		{
    			c++;
    		}
    	}
    	cout<<c+(c*(c-1))/2<<endl;
    	
    }
    return 0;
}
