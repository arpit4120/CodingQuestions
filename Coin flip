//coin flip
//codechef
#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define FAST ios_base::sync_with_stdio(false);cin.tie(NULL);
int32_t main() {
    ll t;
    FAST;
    cin>>t;
    while(t--)
    {
    	int g;
    	cin>>g;
    	while(g--)
    	{
    		int i,n,q;
    		cin>>i>>n>>q;
    		if(n%2!=0)
    		{
    			if(i==q)
    			{
    				cout<<n/2<<endl;
    			}
    			else
    			{
    				cout<<n/2+1<<endl;
    			}
    		}
    		else
    		{
    			cout<<n/2;
    		}
    	}
    	
    }
    return 0;
}
