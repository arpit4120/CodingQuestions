//Magic Elements
//codechef.com
#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define FAST ios_base::sync_with_stdio(false);cin.tie(NULL);
int32_t main() {
    ll t;
    FAST;
    cin>>t;
    while(t--)
    {
    	int n,k;
    	cin>>n>>k;
    	ll a[n],sum=0;
    	for(int i=0;i<n;i++)
    	{
    		cin>>a[i];
    		sum+=a[i];
    	}
    	ll c=0;
    	for(int i=0;i<n;i++)
    	{
    		if(a[i]+k>sum-a[i])
    			c++;
    	}
    	cout<<c<<endl;
    	
    	
    }
    return 0;
}
